@model NguyenDucThanh_2310900098.Models.NdtEmployee

@{
    ViewData["Title"] = "Xem thông tin nhân viên";
}

<div class="row">
    <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-4">@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="NdtEmpId" class="control-label"></label>
                        <input asp-for="NdtEmpId" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpName" class="control-label"></label>
                    <input asp-for="NdtEmpName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpLevel" class="control-label"></label>
                    <input asp-for="NdtEmpLevel" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpStartDate" class="control-label"></label>
                    <input asp-for="NdtEmpStartDate" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpStatus" class="control-label"></label>
                    <input asp-for="NdtEmpStatus" class="form-control" readonly />
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <a asp-action="NdtEdit" asp-route-ndtId="@Model?.NdtEmpId" class="btn btn-primary">Edit</a> |
                        <a asp-action="NdtIndex" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
    </div>
</div>