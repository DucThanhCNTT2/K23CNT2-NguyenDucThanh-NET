@model IEnumerable<NguyenDucThanh_2310900098.Models.NdtEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="NdtCreate" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm mới
    </a>
</div>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NdtEmpId)</th>
            <th>@Html.DisplayNameFor(model => model.NdtEmpName)</th>
            <th>@Html.DisplayNameFor(model => model.NdtEmpLevel)</th>
            <th>@Html.DisplayNameFor(model => model.NdtEmpStartDate)</th>
            <th>@Html.DisplayNameFor(model => model.NdtEmpStatus)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NdtEmpId)</td>
                <td>@Html.DisplayFor(modelItem => item.NdtEmpName)</td>
                <td>@Html.DisplayFor(modelItem => item.NdtEmpLevel)</td>
                <td>@Html.DisplayFor(modelItem => item.NdtEmpStartDate)</td>
                <td>
                    @if (item.NdtEmpStatus == true)
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Tạm khóa</span>
                    }
                </td>
                <td class="text-nowrap">
                    <a asp-action="NdtEdit" asp-route-ndtId="@item.NdtEmpId" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="NdtDetails" asp-route-ndtId="@item.NdtEmpId" class="btn btn-sm btn-info me-1 text-white">
                        <i class="bi bi-eye"></i> Xem
                    </a>
                    <a asp-action="NdtDelete" asp-route-ndtId="@item.NdtEmpId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
