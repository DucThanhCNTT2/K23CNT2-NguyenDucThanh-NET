@model NguyenDucThanh_2310900098.Models.NdtEmployee

@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NdtEdit">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-4">@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="NdtEmpId" class="control-label"></label>
                        <input asp-for="NdtEmpId" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpName" class="control-label"></label>
                        <input asp-for="NdtEmpName" class="form-control" />
                        <span asp-validation-for="NdtEmpName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpLevel" class="control-label"></label>
                        <input asp-for="NdtEmpLevel" class="form-control" />
                        <span asp-validation-for="NdtEmpLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpStartDate" class="control-label"></label>
                        <input asp-for="NdtEmpStartDate" class="form-control" />
                        <span asp-validation-for="NdtEmpStartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NdtEmpStatus" class="control-label"></label>
                        <input asp-for="NdtEmpStatus" class="form-control" />
                        <span asp-validation-for="NdtEmpStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi lại" class="btn btn-primary" name="btnNdtUpdate" /> |
                        <a asp-action="NdtIndex" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
