@model NdtLesoon10FE.Models.Category

@{
    ViewData["Title"] = "Xem thông tin danh mục loại";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h4><i class="bi bi-info-circle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Mã loại</dt>
                    <dd class="col-sm-9">@Model.CateId</dd>

                    <dt class="col-sm-3">Tên loại</dt>
                    <dd class="col-sm-9">@Model.CateName</dd>

                    <dt class="col-sm-3">Trạng thái</dt>
                    <dd class="col-sm-9">
                        @if (Model.CateStatus == true)
                        {
                            <span class="badge bg-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Tạm khóa</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="NdtEdit" asp-route-ndtId="@Model?.CateId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <a asp-action="NdtIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
