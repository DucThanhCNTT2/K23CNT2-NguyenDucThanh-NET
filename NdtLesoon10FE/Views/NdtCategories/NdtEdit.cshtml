@model NdtLesoon10FE.Models.Category

@{
    ViewData["Title"] = "Sửa thông tin danh mục loại";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="NdtEdit" method="post">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="CateId" class="form-label"></label>
                        <input asp-for="CateId" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CateName" class="form-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CateStatus" class="form-label"></label>
                        <select asp-for="CateStatus" class="form-select">
                            <option value="true">Hiển thị</option>
                            <option value="false">Tạm khóa</option>
                        </select>
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Ghi lại
                    </button>
                    <a asp-action="NdtIndex" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
