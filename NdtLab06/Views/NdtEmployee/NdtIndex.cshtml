@model IEnumerable<NdtLab06.Models.NdtEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-center mb-4">Danh sách nhân viên</h2>
        <a href="/NdtEmployee/NdtCreate" class="btn btn-primary">Thêm mới</a>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Lương</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ndtEmp in Model)
            {
                <tr>
                    <td class="text-center">@ndtEmp.NdtId</td>
                    <td>@ndtEmp.NdtName</td>
                    <td>@ndtEmp.NdtBirthDay.ToString("dd/MM/yyyy")</td>
                    <td>@ndtEmp.NdtEmail</td>
                    <td>@ndtEmp.NdtPhone</td>
                    <td class="text-end">@ndtEmp.NdtSalary.ToString("C")</td>
                    <td class="text-center">
                        @if (ndtEmp.NdtStatus)
                        {
                            <span class="badge bg-success">Đang làm</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Nghỉ việc</span>
                        }
                    </td>
                    <td>
                        <a asp-action="NdtEdit" asp-route-id="@ndtEmp.NdtId" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="NdtDelete" asp-route-id="@ndtEmp.NdtId" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
            </tr>
        }
        </tbody>
    </table>
</div>
